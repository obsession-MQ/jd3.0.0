/* components/FilterBar/FilterBar.less */
.container {
  width: 100%;
}
.container .info-container {
  width: 650rpx;
  height: 100%;
  position: fixed;
  border-top-left-radius: 13px;
  border-bottom-left-radius: 13px;
  background-color: #f9f9f9;
  right: 0;
}
.container .info-container .options-container {
  width: 100%;
}
.container .info-container .options-container .send-container,
.container .info-container .options-container .depart-container {
  height: 85rpx;
  font-size: 30rpx;
  border-bottom-right-radius: 0;
  border-top-right-radius: 0;
}
.container .info-container .options-container .send-container .send-address,
.container .info-container .options-container .depart-container .send-address,
.container .info-container .options-container .send-container .all-depart,
.container .info-container .options-container .depart-container .all-depart {
  flex-grow: 3;
  text-align: right;
  color: #ff4800;
  font-size: 25rpx;
  justify-content: flex-end;
}
.container .info-container .options-container .send-container .send-address .address,
.container .info-container .options-container .depart-container .send-address .address,
.container .info-container .options-container .send-container .all-depart .address,
.container .info-container .options-container .depart-container .all-depart .address {
  width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.container .info-container .options-container .send-container .send-address .iconfont,
.container .info-container .options-container .depart-container .send-address .iconfont,
.container .info-container .options-container .send-container .all-depart .iconfont,
.container .info-container .options-container .depart-container .all-depart .iconfont {
  font-size: 15rpx;
  margin-left: 10rpx;
}
.container .info-container .options-container .send-container .all-depart,
.container .info-container .options-container .depart-container .all-depart {
  color: #acacac;
}
.container .info-container .options-container .tag-container,
.container .info-container .options-container .band-list {
  height: 275rpx;
  flex-wrap: wrap;
}
.container .info-container .options-container .tag-container .tag,
.container .info-container .options-container .band-list .tag,
.container .info-container .options-container .tag-container .band-item,
.container .info-container .options-container .band-list .band-item {
  background-color: #e9e9e9;
  width: 175rpx;
  border-radius: 30px;
  text-align: center;
  padding: 10rpx 20rpx;
  margin: 8rpx 0;
  font-size: 25rpx;
  border: 1px solid #fff;
}
.container .info-container .options-container .tag-container .change-orange,
.container .info-container .options-container .band-list .change-orange {
  border: 1px solid #ff5100;
  color: #ff5100;
  background-color: rgba(255, 220, 204, 0.603);
}
.container .info-container .options-container .price-container {
  height: 250rpx;
}
.container .info-container .options-container .price-container .price {
  margin: 20rpx 0 10rpx 0;
}
.container .info-container .options-container .price-container .price .link {
  margin: 0 15rpx;
  color: #f0f0f0;
  font-size: 700;
}
.container .info-container .options-container .price-container .price .min,
.container .info-container .options-container .price-container .price .max {
  background-color: #eeeeee;
  border-radius: 30px;
  padding: 5rpx;
  text-align: center;
}
.container .info-container .options-container .price-container .price-range {
  width: 100%;
  padding: 10rpx 0 0 0;
  margin-bottom: 0rpx;
}
.container .info-container .options-container .price-container .price-range .range-item {
  width: 175rpx;
  background-color: #eeeeee;
  border: 1px solid #ffffff;
  color: black;
  padding: 30rpx;
  border-radius: 20px;
}
.container .info-container .options-container .price-container .price-range .range-item .percent {
  font-size: 16rpx;
}
.container .info-container .options-container .price-container .price-range .change-orangered {
  border: 1px solid #ff5100;
  color: #ff5100;
  background-color: rgba(255, 220, 204, 0.603);
}
.container .info-container .options-container .band-container {
  height: 275rpx;
  width: 100%;
}
.container .info-container .options-container .band-container .title-container {
  width: 100%;
}
.container .info-container .options-container .band-container .title-container .selected {
  display: flex;
  flex-grow: 1;
  justify-content: flex-end;
  font-size: 25rpx;
  color: gray;
}
.container .info-container .options-container .band-container .band-list {
  padding: 10rpx 0 0 0;
  margin-bottom: 0rpx;
}
.container .info-container .btn-container {
  border-bottom-left-radius: 13px;
  background-color: white;
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100%;
  padding: 10rpx 20rpx;
}
.container .info-container .btn-container .reset,
.container .info-container .btn-container .confirm {
  width: 280rpx;
  text-align: center;
  font-size: 30rpx;
  padding: 15rpx 50rpx;
  border: 1px solid #8b8b8b;
  border-radius: 30px;
}
.container .info-container .btn-container .reset .goods-num,
.container .info-container .btn-container .confirm .goods-num {
  font-size: 18rpx;
}
.container .info-container .btn-container .confirm {
  background-color: #ff5100;
  color: white;
  border: none;
}
.inconfont {
  color: red;
}
