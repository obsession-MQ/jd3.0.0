/* components/AllTypes/AllTypes.wxss */
@import '/styles/df.wxss';
.df {
  display: flex;
  align-items: center;
}
.container {
  position: relative;
  top: 0;
  width: 100%;
  color: #464646;
  background-color: white;
  border-top-left-radius: 13px;
  border-bottom-left-radius: 13px;
}
.container .top-container {
  font-size: 30rpx;
  border-top-left-radius: 13px;
  border-bottom: 1px solid #e7e7e7;
}
.container .type-list-container {
  padding-left: 30rpx;
}
.container .type-list-container .all,
.container .type-list-container .type-item {
  border-bottom: 1px solid #e7e7e7;
}
.container .type-list-container .type-item {
  padding: 15rpx;
}
.container .cancle-container {
  width: 100%;
  padding: 10rpx 30rpx;
  box-shadow: 5rpx -5rpx 10rpx 3rpx #e4e4e4;
  border-bottom-left-radius: 13rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
}
.container .cancle-container .cancle {
  width: 600rpx;
  text-align: center;
  border: 1px solid gray;
  padding: 10rpx 30rpx;
  border-radius: 20px;
  font-size: 30rpx;
}
