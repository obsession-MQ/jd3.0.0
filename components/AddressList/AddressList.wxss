/* components/AddressList/AddressList.wxss */
@import "/styles/df.wxss";
.container {
  width: 100%;
  height: 100%;
  background-color: white;
  padding: 30rpx 0 30rpx 30rpx;
  border-top-left-radius: 13px;
  border-bottom-left-radius: 13px;
  position: relative;
}
.container .top-container {
  width: 100%;
}
.container .top-container .back-container {
  flex-grow: 1;
  margin-left: 30rpx;
  color: #b4b4b4;
}
.container .top-container .send-to {
  flex-grow: 1.5;
  font-size: 35rpx;
}
.container .checked {
  width: 100%;
  padding: 30rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.container .btn-box {
  width: 100%;
  padding: 20rpx 0;
  background-color: #ffffff;
  position: absolute;
  bottom: 0;
}
.container .btn-box .choose-other-address {
  width: 600rpx;
  border-radius: 20px;
  background-color: orangered;
  color: white;
  text-align: center;
}
.ads_ht {
  overflow: auto;
  height: 50vh;
}
.ads_ht .adress_item {
  width: 600rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ececec;
  display: flex;
}
.ads_ht .adress_item .ads_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding-left: 10rpx;
}
.ads_ht .adress_item .iconfont {
  margin: 15rpx;
}
.ads_ht .adress_item .icon-gou2 {
  color: orangered;
}
