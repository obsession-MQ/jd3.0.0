.pyg_index {
  background-color: #f4f4f4;
}
.pyg_index .Search {
  position: fixed;
  top: 0;
  right: 0;
  z-index: 300;
  width: 100%;
  background-color: #c82519;
  padding: 0rpx 0rpx 10rpx 0;
}
.pyg_index .zzd {
  position: fixed;
  width: 100%;
  z-index: 300;
  top: 79rpx;
}
.pyg_index .zzd .Thead {
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: relative;
  background-color: #c82419;
}
.pyg_index .zzd .Thead .Tslide {
  width: 90%;
  height: 50rpx;
  white-space: nowrap;
  display: flex;
  padding: 20rpx 0rpx 20rpx 20rpx;
}
.pyg_index .zzd .Thead .Tslide view {
  margin-right: 20rpx;
}
.pyg_index .zzd .Thead .Tslide view .Threads {
  color: #fff;
  font-size: 26rpx;
}
.pyg_index .zzd .Thead .Tslide view .active {
  background: linear-gradient(to right, #ffffff, #f1a9a1, #efa198, #ec9086, #e76c5f, #e35c4d, #e35545);
  border-left: 2rpx solid #fff;
}
.pyg_index .zzd .Thead .Tslide view .underline {
  width: 80%;
  height: 7rpx;
}
.pyg_index .zzd .Thead .Tslide view .dddd {
  background: linear-gradient(to right, #ffffff, #f1a9a1, #efa198, #ec9086, #e76c5f, #e35c4d, #e35545);
}
.pyg_index .zzd .Thead .subscript {
  width: 10%;
  z-index: 8888;
  height: 50rpx;
  margin-top: 20rpx;
}
.pyg_index .zzd .Thead .subscript .subscriptv {
  width: 100%;
  height: 50rpx;
}
.pyg_index .zzd .Thead .subscript .subscriptv .jtx {
  width: 25rpx;
  height: 25rpx;
}
.pyg_index .zzd .Thead .subscript .subscriptv .jts {
  width: 25rpx;
  height: 25rpx;
}
.pyg_index .zzd .Thead .subscript-Tslide {
  position: absolute;
  z-index: 33;
  left: 0;
  top: 90rpx;
  width: 750rpx;
  background-color: #B5B5B5;
}
.pyg_index .zzd .Thead .subscript-Tslide .shade {
  width: 100%;
  height: 100vh;
  position: absolute;
  background-color: #999;
  z-index: 9999;
  left: 0;
  opacity: 0.7;
}
.pyg_index .zzd .Thead .subscript-Tslide .quad {
  padding: 0 10rpx;
  background-color: #ffffff;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
  display: flex;
  flex-wrap: wrap;
}
.pyg_index .zzd .Thead .subscript-Tslide .quad .subscript-Tslide-shout {
  width: 125rpx;
  margin: 20rpx 10rpx;
  border-radius: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 14rpx 0;
}
.pyg_index .zzd .Thead .subscript-Tslide .quad .subscript-Tslide-shout .subscript-Tslide-Threads {
  font-size: 24rpx;
}
.pyg_index .zzd .Thead .subscript-Tslide .quad .shou {
  background-color: #f2f2f2;
  border: 1px solid #fff;
}
.pyg_index .zzd .Thead .subscript-Tslide .quad .shouttt {
  background-color: #fff !important;
  border: 1px solid #e03c2b !important;
}
