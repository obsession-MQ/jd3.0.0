.pyg_index .brand {
  margin: 20rpx;
  display: flex;
  background-color: #fff;
  border-radius: 20rpx;
}
.pyg_index .brand .brand1 {
  width: 25%;
  padding: 15rpx;
  text-align: center;
}
.pyg_index .brand .brand1 .brand-title {
  font-size: 30rpx;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  overflow: hidden;
}
.pyg_index .brand .brand1 .brand-vice {
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  overflow: hidden;
  font-size: 20rpx;
}
.pyg_index .brand .brand1 .vice0 {
  color: #7063aa;
}
.pyg_index .brand .brand1 .vice1 {
  color: #c3264c;
}
.pyg_index .brand .brand1 .vice2 {
  color: #ce7851;
}
.pyg_index .brand .brand1 .vice3 {
  color: #6581cc;
}
.pyg_index .brand .brand1 .brand-pic {
  margin-top: 20rpx;
}
.pyg_index .brand .brand1 .brand-pic image {
  border-radius: 20rpx;
}
.pyg_index .index_floor .floor_group .floor_title {
  padding: 10rpx 0;
}
.pyg_index .index_floor .floor_group .floor_title image {
  width: 100%;
}
.pyg_index .index_floor .floor_group .floor_list {
  overflow: hidden;
}
.pyg_index .index_floor .floor_group .floor_list navigator {
  float: left;
  width: 33.33%;
}
.pyg_index .index_floor .floor_group .floor_list navigator:nth-last-child(-n + 4) {
  height: calc(33.33vw * 386 / 232 / 2);
  border-left: 10rpx solid #fff;
}
.pyg_index .index_floor .floor_group .floor_list navigator:nth-child(2),
.pyg_index .index_floor .floor_group .floor_list navigator:nth-child(3) {
  border-bottom: 10rpx solid #fff;
}
.pyg_index .index_floor .floor_group .floor_list navigator image {
  width: 100%;
  height: 100%;
}
