.user_info_page{
    background-color: #F7F7F7;
    min-height: 100vh;
}
.user_info_form{
    background-color: #fff;
}
.user_name{
    display: flex;
    align-items: center;
    margin-left: 20rpx;
    line-height: 90rpx;
    font-size: 33rpx;
    border-bottom: 1px solid #F7F7F7;
}
.name_title{
    flex: 1;
    color: #333;
}
.name_english{
    flex: 1;
    
    text-align: right;
    font-size: 24rpx;
    color: #999;
}
.logo{
    width: 27%;
    margin: 0 auto;
    margin-top: 670rpx;
}
.detail-page{
    height: 500rpx;
    width: 100%;
    background-color: #fff;
}
.revise_title_text{
    margin-left: 330rpx;
    font-weight: 555;
}
.icon{
    color: rgb(192, 192, 192);
    margin-left: 242rpx;
}
.revise_inp{
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid rgb(223, 223, 223);
    margin: 20rpx;
}
.revise_inp input{
    font-size: 26rpx;
}
.revise_inp text{
    color: rgb(223, 223, 223);
    font-size: 26rpx;
}
.hint {
    margin: 0 0 100rpx 20rpx;
    color: rgb(201, 201, 201);
    font-size: 24rpx;
}
.revise_btn{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.revise_btn button{
    width: 44%;
    border-radius: 60rpx;
    font-size: 30rpx;
}
